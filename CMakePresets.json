{
    "version": 2,
    "configurePresets": [
        {
            "name": "unix_makefiles",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "Debug configuration using Unix Makefiles",
            "inherits": "unix_makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TEST_SUITE": true,
                "USE_GCOV": true
            }
        },
        {
            "name": "release",
            "displayName": "Release Config",
            "description": "Release configuration using Unix Makefiles",
            "inherits": "unix_makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TEST_SUITE": true,
                "SW_BUILD_DOC": true,
                "LIBMY_BUILD_DOC": true
            }
        }
    ],
    "buildPresets": [
        {
            "name": "common",
            "hidden": true,
            "jobs": 100
        },
        {
            "name": "debug",
            "displayName": "Debug Build",
            "description": "Debug build using Unix Makefiles",
            "inherits": "common",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Release build using Unix Makefiles",
            "inherits": "common",
            "configurePreset": "release"
        }
    ],
    "testPresets": [
        {
            "name": "common",
            "hidden": true,
            "output": {
                "verbosity": "verbose"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug test",
            "inherits": "common",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release test",
            "inherits": "common",
            "configurePreset": "release"
        }
    ]
}
